<% provide :title, t(".title_signup") %>
<% provide :button_text, t(".create") %>

<div class="register-page">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-4 col-md-4 cnt-bg-photo d-none d-xl-block d-lg-block d-md-block framgia_background">
        <div class="register-info">
        </div>
      </div>
      <div class="col-lg-8 col-md-8 col-sm-12 align-self-center">
        <div class="content-form-box register-box">
          <% flash.each do |message_type, message| %>
            <%= content_tag :div, message, class: "alert alert-#{message_type}" %>
          <% end %>
          <div class="login-header"><h4><%= yield :title %></h4></div>
          <%= form_for resource, as: resource_name, url: registration_path(resource_name), class: "new_user" do |f| %>
            <%= render "shared/error_messages", object: f.object %>
            <div class="form-group">
              <%= f.label :email %>
              <%= f.email_field :email, placeholder: t(".email"), class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :password %>
              <%= f.password_field :password, placeholder: t(".pass"), class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :password_confirmation %>
              <%= f.password_field :password_confirmation, placeholder: t(".pass_con"), class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.submit yield(:button_text), class: "btn btn-color btn-md btn-block btn-signup" %>
            </div>
          <% end %>
          </form>

          <div class="login-footer text-center">
            <p><%= t ".already" %>
              <%= link_to t(".sign_in"), new_user_session_path %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
