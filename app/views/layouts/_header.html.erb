<header class="main-header" id="main-header">
  <div class="header-top">
    <div class="auto-container clearfix">
      <div class="top-left">
        <ul class="clearfix">
          <li>
            <a href="#"><span class="fa fa-circle">
              </span> <%= t(".hellow") %>
            </a>
          </li>
        </ul>
      </div>
      <div class="top-right">
        <ul class="clearfix">
          <li>
            <%= link_to "#" do %>
              <span class="fa fa-phone"></span>
              <%= t ".nam1" %>
            <% end %>
          </li>
          <li>
            <%= link_to "#" do %>
              <span class="fa fa-clock-o">
              </span><%= t ".nam2" %>
            <% end %>
          </li>
          <li>
            <%= link_to "#" do %>
              <span class="fa fa-at">
              </span>
              <%= t ".nam3" %>
            <% end %>
          </li>
          <li>
            <%= link_to "https://goo.gl/maps/mD67gpRHALt", target: "_blank" do %>
              <span class="fa fa-map-marker">
              </span>
              <%= t ".nam4" %>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </div>
  <div class="header-lower">
    <div class="auto-container clearfix">
      <div class="outer-box">
        <div class="">
          <%= image_tag "logo.jpeg", :size => "94x100" %>
          <nav class="main-menu">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
            </div>
            <div class="navbar-collapse">
              <ul class="navigation">
                <li>
                  <%= link_to t(".home"), home_path %>
                </li>
                <li>
                  <%= link_to t(".about"), about_path %>
                </li>
                <li>
                  <%= link_to t(".contact"), contact_path %>
                </li>
                <li>
                  <%= link_to t(".help"), help_path %>
                </li>
                <% if user_signed_in? %>
                  <li>
                    <% if current_user.admin? %>
                      <%= link_to t(".management"), admin_root_path %>
                    <% end %>
                  </li>
                  <li id="noti_Container" class="notiplus">
                    <%= render "layouts/ring" %>
                  </li>
                  <li class="dropdown appoinment-btn">
                    <%= link_to "#", class: "dropdown-toggle thm-btn pt-5 pb-5 btn-drop-down", data: {toggle: "dropdown"} do %>
                      <%= first_part_of current_user.email %><b class="caret"></b>
                    <% end %>
                    <ul class="dropdown-menu">
                      <li>
                        <%= link_to t(".profile"), current_user %>
                      </li>
                      <li>
                        <%= link_to t(".setting"), edit_user_path(current_user) %>
                      </li>
                      <li>
                        <%= link_to t(".logout"), destroy_user_session_path, method: :delete %>
                      </li>
                    </ul>
                  </li>
                <% end %>
              </ul>
            </div>
          </nav>

        </div>
      </div>
    </div>
  </div>
</header>
<section class="page-title" style="background-image:url(/assets/calendar2.jpg);">
</section>
